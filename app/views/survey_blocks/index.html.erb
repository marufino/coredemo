<h1>Listing survey_blocks</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @survey_blocks.each do |survey_block| %>
      <tr>
        <td><%= survey_block.category %></td>
        <td><%= survey_block.weight %></td>
        <td><%= link_to 'Show', survey_block %></td>
        <td><%= link_to 'Edit', edit_survey_block_path(survey_block) %></td>
        <td><%= link_to 'Destroy', survey_block, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

