<h1>Listing competencies</h1>

<br />
<%= link_to 'New Competency', new_competency_path, :class =>"button" %>

<div class="editform" style="margin-bottom: 2em; margin-top: 2em; width: 30%;">
<h4>Import Competencies</h4>

<%= form_tag import_competencies_path, multipart: true do %>
  <%= file_field_tag :file, {:style=> 'margin-bottom: 1em;'} %>
  <%= submit_tag "Import", {:style=> 'background-color: #005983; color: #ffffff;'} %>
<% end %>
</div>
<table class="table table-striped shadow">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Edit</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @competencies.each do |competency| %>
      <tr>
        <td><%= competency.name %></td>
        <td><%= competency.description %></td>
        <td><%= link_to edit_competency_path(competency) do %>
              <span class="glyphicon glyphicon-edit icon-larger .edit-button-color"></span>
            <% end %>
        </td>
        <td><%= link_to competency, method: :delete, data: { confirm: 'Delete Competency? Are you sure?' } do %>
              <span class="glyphicon glyphicon-remove icon-larger delete-button-color"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
