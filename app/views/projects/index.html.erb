<h1>Listing projects</h1>

<div style="margin-top: 2em; margin-bottom: 2em;">
  <%= link_to 'Add a New Project', new_project_path, {:class=> 'newbutton'} %>
</div>

<table class="table table-striped shadow">
  <thead>
    <tr>
      <th>Project Name</th>
      <th>Show</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= link_to edit_project_path(project) do %>
              <span class="glyphicon glyphicon-search icon-larger .edit-button-color"></span>
          <% end %>
        </td>
        <td><%= link_to project, method: :delete, data: { confirm: 'Delete Project? Are you sure?' } do %>
              <span class="glyphicon glyphicon-remove icon-larger delete-button-color"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

