<div class = "navbar-default sidebar" role="navigation">
    <div class = "sidebar-nav navbar-collapse">
      <ul class="nav in" id="side-menu">
        <div style="padding: 0px">
          <%= image_tag("logo.png", :alt => "logo", style: "width:100%") %>
        </div>
      </ul>
        <ul class="nav in menu-padding" id="side-menu">
          <li class = "orange-text" style="padding-left: 0px;"><%= link_to '#' do %>
              <span class="glyphicon glyphicon-list-alt icon-larger"></span>Navigation</li>
              <% end %>
          <% if current_user %>
            <li><%= link_to "Overview", user_path(current_user) %></li>
             <% if current_user.observer? %>
              <li><%= link_to "Conduct a Survey", scores_path %></li>
                <% if current_user.role?('admin') %>
                  <li><%= link_to "Data Analysis", new_user_registration_path %></li>
                  <li><%= link_to "Administration", assignments_path %></li>
                <% end %>
            <% end %>
          <% else %>
            <li><%= link_to "Overview", new_user_registration_path %></li>
          <% end %>
        </ul>

        <% if current_user %>
        <ul class="nav nav-second-level">

          <% if current_user.observer? %>
          <div style="margin-bottom: 10px">
            <% if current_user.role?('admin') %>
            <li style="padding-top: 10px"><h5><span class="glyphicon glyphicon-user icon-larger"></span>Trainees <%= Trainee.all.count %></h5></li>
              <div class="scrollable">
                <% Trainee.all.each do |trainee|%>
                  <%= render :partial => "shared/side_thumbs", :locals => {:user => trainee.user} %>
                <% end %>
              </div>
            <% else %>
              <li style="padding-top: 10px"><h5><span class="glyphicon glyphicon-user icon-larger"></span>Trainees <%= Trainee.all.count %></h5></li>
              <div class="scrollable">
                <% Trainee.all.each do |trainee|%>
                  <%= render :partial => "shared/side_thumbs", :locals => {:user => trainee.user} %>
                <% end %>
              </div>
            <% end %>
          </div>
          <% end %>

          <% if current_user.role?('admin') %>
          <div style="margin-bottom: 10px; padding-right: 10px; background-color: #081b29">
            <li style="padding-top: 10px"><h5><span class="glyphicon glyphicon-user icon-larger"></span>Observers <%= Observer.all.count %></h5></li>
              <div class="scrollable">
                <% Observer.all.each do |observer|%>
                  <%= render :partial => "shared/side_thumbs", :locals => {:user => observer.user} %>
                <% end %>
              </div>
          </div>
          <div style="margin-bottom: 30px">
            <li style="padding-top: 10px"><h5><span class="glyphicon glyphicon-user icon-larger"></span>Administrators <%= Role.find_by_name('admin').users.count %></h5></li>
              <div class="scrollable">
                <% Role.find_by_name('admin').users.each do |user|%>
                  <%= render :partial => "shared/side_thumbs", :locals => {:user => user} %>
                <% end %>
            </div>
          </div>
          <% end %>

        </ul>
        <% end %>
    </div>
</div>
