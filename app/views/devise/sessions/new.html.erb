<%= image_tag("core.png", :alt => "logo") %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div id="loginbox" class="loginbox">
    <label for="username"><!--"User ID" label-->
      User ID:
      <%= f.email_field :email, autofocus: true %>
    </label>

    <label for="password"><!--"Password" label-->
      Password:
      <%= f.password_field :password, autocomplete: "off" %>
    </label>

    <button lang="" type="submit" class="btn-submit" title="Sign In"  href="" tabindex="5">Sign in</button><!--sign in button-->
    <div class="aboutcontainer">
      <div class="copyright" style="margin-top: 1em;"><!--copyright statement-->&copy; 2015 Michigan and Manchester.</div>
    </div>

  <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
  <% end -%>
  <%= render "devise/shared/links" %>
</div>

<% end %>


