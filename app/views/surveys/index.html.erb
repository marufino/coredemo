<h1>Listing surveys</h1>
<div style="margin-top: 2em; margin-bottom: 2em;">
<%= link_to '+ New Survey', new_survey_path, :class=> 'button' %>
</div>
<table class="table table-striped shadow" style="font-size: 8pt,">
  <thead>
    <tr>
      <th colspan="3">Name</th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        <td><%= link_to 'Show', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

