<%= form_for(@survey) do |f| %>
  <% if @survey.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@survey.errors.count, "error") %> prohibited this survey from being saved:</h2>

      <ul>
      <% @survey.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "col-xs-12 shadow survey-topbar ">
    <div class = "col-xs-6">
      <%= f.label :name, 'Survey Name'  %>
      <%= f.text_field :name , :style => "float: right;" %><br>

      <%= f.label :description, 'Survey Description' %>
      <%= f.text_area :description, cols: "30", rows: "5" , :style => "float: right;" %>
      <br>
    </div>
    <div class = "col-xs-3">

    </div>
    <div class = "col-xs-3">
      <table>
        <%= f.fields_for :survey_blocks do |block_form| %>
          <tr>
            <td><%= block_form.label @survey.survey_blocks[block_form.options[:child_index]].category%></td>
            <td><%= block_form.number_field :weight , within: 1...100 %></td>
          </tr>
        <% end %>

        <tr>
          <td><%= f.label 'Total' %></td>
          <td><%= f.label '100' %></td>
        </tr>
      </table>
    </div>
  </div>


  <%= f.fields_for :survey_blocks do |block_form| %>
  <h4> Evaluation (   points)</h4>
  <div class="scorecard">
      <table class="table shadow">
        <thead>
        <tr style="background-color: lightgrey">
          <th>Category</th>
          <th>Rating</th>
          <th>Weight</th>
        </tr>
        </thead>
            <tr>
              <%= block_form.nested_fields_for :questions, wrapper_tag: :tr do |q_form| %>
              <td><%= q_form.collection_select :category, @competencies, :name, :name, include_blank: false %>  <span class="glyphicon glyphicon-info-sign" aria-hidden="true" style="color:cornflowerblue"></span></td>
              <td><% (1..10).each do |i| %>
                  <%= radio_button_tag "test", i, 0, options = {:disabled => true} %>
                <% end %></td>
              <td><%= q_form.number_field :weight %><%= q_form.remove_nested_fields_link do %>
                  <span class="glyphicon glyphicon-minus-sign" aria-hidden="true" style="color:red"></span>
                  <% end %>
              </td>
            </tr>
          <% end %>
          <tr>
            <td><%= block_form.add_nested_fields_link :questions, 'Add new +' %></td>
          </tr>

      </table>
    <% end %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
