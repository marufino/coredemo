<%= form_for(@score) do |f| %>
  <% if @score.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@score.errors.count, "error") %> prohibited this score from being saved:</h2>

      <ul>
      <% @score.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render :partial => "shared/profile_block", :locals => {:user => @score.trainee.user} %>

  <% @blocks.each do |block| %>
  <h4><%= block.category %> Evaluation ( <%= block.weight %> points)</h4>

  <table class="table shadow">
    <thead>
    <tr style="background-color: lightgrey">
      <th>Category</th>
      <th>Rating</th>
      <th>Weight</th>
    </tr>
    </thead>
    <% block.questions.each_with_index do |q| %>
      <tr>

        <td><%= q.category %><span class="glyphicon glyphicon-info-sign" aria-hidden="true" style="color:cornflowerblue; float:right;"></span></td>

        <td><% (1..10).each do |i| %>
            <%= radio_button_tag q.id, i, Rating.where(question_id: q.id, score_id: @score.id).first.value == i %>
          <% end %></td>

        <td><%= q.weight %></td>

      </tr>
    <% end %>
  </table>
  <% end %>

  <div class="actions">
    <%= submit_tag 'Submit' %>
  </div>
<% end %>
